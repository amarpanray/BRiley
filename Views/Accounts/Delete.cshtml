@model BankingApp.Models.ViewModels.AccountViewModels

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Balance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Balance)
        </dd>
    </dl>
  
  
    <form asp-action="Delete" id="Deletion">
        @Html.HiddenFor(model => model.AccountID)
        <input type="button" value="Delete" id="btnDelete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>


<div id="Confirmation" title="Delete Account?"></div>
<script>
    $("#btnDelete").click(function () {
        $("#Confirmation").html("Do you wish to delete this account?");
        $("#Confirmation").dialog({
            resizable: false,
            height: "auto",
            width: 400,
            modal: true,
            buttons:
            {
                "Yes, delete this account": function ()
                {                  
                    $("#Deletion").submit();
                    $(this).dialog("close");
                },
                Cancel: function () { $(this).dialog("close"); }
            }
        });
    });
</script>
 
 